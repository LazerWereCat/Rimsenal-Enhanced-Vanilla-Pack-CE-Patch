<?xml version="1.0" encoding="utf-8"?>

 <Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>Rimsenal - Enhanced Vanilla Pack</modName>
			</li>
			
			<!-- ========== Compound Bow =========== -->
			
			 <li Class="CombatExtended.PatchOperationMakeGunCECompatible">
				<defName>Bow_Compound</defName>
				<statBases>
					<WorkToMake>22000</WorkToMake>
					<SightsEfficiency>0.8</SightsEfficiency>
					<ShotSpread>0.6</ShotSpread>
					<SwayFactor>2</SwayFactor>
					<Bulk>4.5</Bulk>
					<Mass>1.6</Mass>
					<RangedWeapon_Cooldown>1.15</RangedWeapon_Cooldown>
				</statBases>
				<costList>
					<Steel>5</Steel>
					<ComponentIndustrial>2</ComponentIndustrial>
					<Chemfuel>15</Chemfuel>
				</costList>
				<Properties>				
					<verbClass>CombatExtended.Verb_ShootCE</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Projectile_CompoundArrow_BulletTip</defaultProjectile>
					<warmupTime>1</warmupTime>
					<range>38</range>
					<soundCast>Bow_Large</soundCast>
				</Properties>
				<AmmoUser>
					<ammoSet>AmmoSet_CompoundArrow</ammoSet>
				</AmmoUser>
				<FireModes>
					<aiAimMode>AimedShot</aiAimMode>
				</FireModes>
				<weaponTags>
				<li>CE_Bow</li>
				</weaponTags>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Bow_Compound"]/tools</xpath>
					<value>
						<tools>
						<li Class="CombatExtended.ToolCE">
							<label>limb</label>
							<capacities>
							<li>Blunt</li>
							</capacities>
							<power>8</power>
							<cooldownTime>1.6</cooldownTime>
							<armorPenetration>0.102</armorPenetration>
							<linkedBodyPartsGroup>Base</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>nock</label>
							<capacities>
							<li>Poke</li>
							</capacities>
							<power>8</power>
							<cooldownTime>1.6</cooldownTime>
							<armorPenetration>0.075</armorPenetration>
							<linkedBodyPartsGroup>Point</linkedBodyPartsGroup>
						</li>
				  </tools>
				</value>
			  </li>
			  
			 <!-- ========== Throwing Axe =========== -->
			 

			 
			<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
				<defName>Gun_ThrowingAxes</defName>
				<costList>
					<Steel>3</Steel>
				</costList>
				<statBases>
					<WorkToMake>1800</WorkToMake>
					<MarketValue>5.0</MarketValue>
					<SightsEfficiency>0.45</SightsEfficiency>
					<ShotSpread>1.5</ShotSpread>
					<SwayFactor>2.5</SwayFactor>
					<Bulk>3.00</Bulk>
					<Mass>2.00</Mass>
					<RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
				</statBases>
				<weaponTags>
					<li>NeolithicRanged</li>
					<li>CE_OneHandedWeapon</li>
					<li>CE_AI_Rifle</li>
				</weaponTags>
				<Properties>
					<verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Axe_Thrown</defaultProjectile>
					<warmupTime>1.5</warmupTime>
					<range>11</range>
				</Properties>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Gun_ThrowingAxes"]/tools</xpath>
					<value>
						<tools>
						<li Class="CombatExtended.ToolCE">
							<label>handle</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>8</power>
							<cooldownTime>1.6</cooldownTime>
							<armorPenetration>0.102</armorPenetration>
							<linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>edge</label>
							<capacities>
								<li>Cut</li>
							</capacities>
							<power>12</power>
							<cooldownTime>1.8</cooldownTime>
							<chanceFactor>1.5</chanceFactor>
							<armorPenetration>0.181</armorPenetration>
							<linkedBodyPartsGroup>Edge</linkedBodyPartsGroup>
						</li>
						</tools>
					</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Gun_ThrowingAxes"]</xpath>
					<value>
						<stackLimit>75</stackLimit>
					</value>
			</li>
			
			
			<!-- ========== Throwing Club =========== -->
			 

			 
			<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
				<defName>Gun_ThrowingClubs</defName>
				<costList>
					<WoodLog>3</WoodLog>
				</costList>
				<statBases>
					<WorkToMake>1800</WorkToMake>
					<MarketValue>5.0</MarketValue>
					<SightsEfficiency>0.45</SightsEfficiency>
					<ShotSpread>1.5</ShotSpread>
					<SwayFactor>2.5</SwayFactor>
					<Bulk>3.00</Bulk>
					<Mass>2.00</Mass>
					<RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
				</statBases>
				<weaponTags>
					<li>NeolithicRanged</li>
					<li>CE_OneHandedWeapon</li>
					<li>CE_AI_Rifle</li>
				</weaponTags>
				<Properties>
					<verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Club_Thrown</defaultProjectile>
					<warmupTime>1.5</warmupTime>
					<range>10</range>
				</Properties>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Gun_ThrowingClubs"]/tools</xpath>
					<value>
						<tools>
						<li Class="CombatExtended.ToolCE">
							<label>handle</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>8</power>
							<cooldownTime>1.6</cooldownTime>
							<armorPenetration>0.102</armorPenetration>
							<linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
						</li>
						<li Class="CombatExtended.ToolCE">
							<label>head</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>14</power>
							<cooldownTime>2.0</cooldownTime>
							<chanceFactor>1.5</chanceFactor>
							<armorPenetration>0.181</armorPenetration>
							<linkedBodyPartsGroup>Head</linkedBodyPartsGroup>
						</li>
						</tools>
					</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Gun_ThrowingClubs"]</xpath>
					<value>
						<stackLimit>75</stackLimit>
					</value>
			</li>
			
			<!-- ========== No Blowgun =========== -->
			
			<li Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="Gun_Blowgun"]</xpath>
			</li>
			
		</operations>
	</Operation>	  
</Patch>